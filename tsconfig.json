{
    "compilerOptions": {
    // Shared compiler options for both frontend and backend
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
    },
    "references": [
        { "path": "./frontend" }, // Reference to the frontend project
        { "path": "./backend" }   // Reference to the backend project
    ]
}
